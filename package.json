{
  "name": "pokedex-cresce-ai",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && tsc-alias && cpx \"./src/shared/views/**/*\" ./dist/src/shared/views --clean && cpx \"./upload/**/*\" ./dist/upload --clean",
    "start": "cross-env NODE_ENV=production node dist/src/main/server/index.js",
    "lint": "eslint . --ext .ts --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dudunog/pokedex-cresce-ai.git"
  },
  "keywords": [],
